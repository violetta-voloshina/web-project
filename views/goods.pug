extends layout
block params
	- headTitle = title

block body
	.row.form-menu
		each good in goods
			.col-md-4
				.card.mb-4.shadow-sm
					img.card-img-top(src=good.image.src, style='height: 225px; width: 100%; display: block;')
					.card-body
						p.text-muted= good.descrition
						.d-flex.justify-content-between.align-items-center
							p.text= `Размер: ${good.weight} x ${good.height} см`
							p.text= `${good.price} руб.`